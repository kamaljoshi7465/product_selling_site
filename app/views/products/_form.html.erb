<%= form_with(model: product) do |form| %>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :desc, style: "display: block" %>
    <%= form.text_area :desc %>
  </div>
  <div>
    <%= form.label :category, style: "display: block" %>
    <%= form.collection_select :category_id, Category.all, :id, :categoryname %>
  </div>
  <div>
    <%#= form.label :image, style: "display: block" %>
    <%#= form.file_field :image %>
  </div>
  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price %>
  </div>
  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, Product.statuses.keys %>
  </div>
  <div>
    <%= form.label :merchant_id, style: "display: block" %>
    <%= form.collection_select :merchant_id, Merchant.all, :id, :email %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
